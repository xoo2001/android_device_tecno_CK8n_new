<resources>

    <!-- Color of the FOD view -->
    <color name="config_udfpsColor">#ffffffff</color>

    <!-- Location on the screen of the center of the fingerprint sensor. -->
    <dimen name="physical_fingerprint_sensor_center_screen_location_y">2168px</dimen>

    <!-- Location on the screen of the center of the physical power button. This is a reasonable
        default that should be overridden by device-specific overlays. -->
    <dimen name="physical_power_button_center_screen_location_y">1200px</dimen>

    <!-- Pixel pitch of the device. um/px -->
    <item name="pixel_pitch" format="float" type="dimen">64.37</item>

    <!-- Adjust the icon padding in status bar for rounded corners. -->
    <dimen name="rounded_corner_content_padding">47.0px</dimen>

    <!-- the padding on the top of the statusbar (usually 0) -->
    <dimen name="status_bar_padding_top">10.0px</dimen>

    <!-- The starting padding for the clock in the status bar. -->
    <dimen name="status_bar_clock_starting_padding">6.0px</dimen>

    <!-- Margin on the left side of the carrier text on Keyguard -->
    <dimen name="keyguard_carrier_text_margin">27dp</dimen>

    <!-- Height of the status bar header bar when on Keyguard -->
    <dimen name="status_bar_header_height_keyguard">36dp</dimen>

</resources>
